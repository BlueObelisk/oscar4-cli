<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>uk.ac.cam.ch.wwmm.oscar</groupId>
  <artifactId>oscar4-cli</artifactId>
  <version>4.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>oscar4-cli</name>

  <parent>
    <groupId>wwmm</groupId>
    <artifactId>wwmm-parent</artifactId>
    <version>1</version>
  </parent>
  <repositories>
    <repository>
      <id>ucc-repo</id>
      <url>https://maven.ch.cam.ac.uk/m2repo</url>
    </repository>
    <repository>
      <id>jexample-repo</id>
      <url>http://scg.unibe.ch/download/jexample/maven/</url>
    </repository>
  </repositories>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <dependencies>
  	<dependency>
  		<groupId>junit</groupId>
  		<artifactId>junit</artifactId>
  		<version>4.7</version>
  	</dependency>
  	<dependency>
  		<groupId>xom</groupId>
  		<artifactId>xom</artifactId>
  		<version>1.2.3</version>
  	</dependency>
  	<dependency>
  		<groupId>uk.ac.cam.ch.wwmm.oscar</groupId>
  		<artifactId>oscar4-tokenizer</artifactId>
  		<version>4.0-SNAPSHOT</version>
  	</dependency>
  	<dependency>
  		<groupId>uk.ac.cam.ch.wwmm.oscar</groupId>
  		<artifactId>oscar4-memmrecogniser</artifactId>
  		<version>4.0-SNAPSHOT</version>
  	</dependency>
  	<dependency>
  		<groupId>uk.ac.cam.ch.wwmm.oscar</groupId>
  		<artifactId>oscar4-core</artifactId>
  		<version>4.0-SNAPSHOT</version>
  	</dependency>
  	<dependency>
  		<groupId>uk.ac.cam.ch.wwmm.oscar</groupId>
  		<artifactId>oscar4-opsin</artifactId>
  		<version>4.0-SNAPSHOT</version>
  	</dependency>
        <dependency>
                <groupId>ch.unibe.jexample</groupId>
                <artifactId>jexample</artifactId>
                <version>4.4-378</version>
        </dependency>
        <dependency>
        	<groupId>uk.ac.cam.ch.wwmm.oscar</groupId>
        	<artifactId>oscar4-api</artifactId>
        	<version>4.0-SNAPSHOT</version>
        </dependency>
        <dependency>
        	<groupId>com.google.code.cli-parser</groupId>
        	<artifactId>cli</artifactId>
        	<version>7</version>
        </dependency>
        <dependency>
        	<groupId>uk.ac.cam.ch.wwmm.oscar</groupId>
        	<artifactId>oscar4-formatter</artifactId>
        	<version>4.0-SNAPSHOT</version>
        </dependency>
  </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                    <archive>
                        <manifest>
                            <mainClass>net.sf.jniinchi.Main</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
